<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <!-- サーブレットの登録 -->
    <servlet>
        <!-- サーブレット名を hello として登録する -->
        <servlet-name>hello</servlet-name>
        <!-- サーブレットクラスは HelloServlet（拡張子は付けない） -->
        <servlet-class>HelloServlet</servlet-class>
    </servlet>

    <!-- URLとサーブレットの対応付け -->
    <servlet-mapping>
        <!-- 上で登録した hello というサーブレット名を指定する -->
        <servlet-name>hello</servlet-name>
        <!-- /hello というパスにアクセスしたとき、helloサーブレットを実行する -->
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

